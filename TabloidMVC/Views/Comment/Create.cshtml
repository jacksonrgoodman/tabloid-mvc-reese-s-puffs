@model TabloidMVC.Models.ViewModels.CommentViewModel

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Comments</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">

                <input asp-for="Comment.Id" type="hidden" class="form-control" />

            </div>
            <div class="form-group">

                <input asp-for="Comment.PostId" type="hidden" class="form-control" />

            </div>
            <div class="form-group">

                <input asp-for="Post.Id" type="hidden" class="form-control" />
                <span asp-validation-for="Post.Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <input asp-for="Comment.UserProfile.DisplayName" type="hidden" class="form-control" />
                
            </div>
            <div class="form-group">
                <label asp-for="Comment.Subject" class="control-label"></label>
                <input asp-for="Comment.Subject" class="form-control" />
                <span asp-validation-for="Comment.Subject" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Comment.Content" class="control-label"></label>
                <input asp-for="Comment.Content" class="form-control" />
                <span asp-validation-for="Comment.Content" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<label asp-for="Comment.CreateDateTime" class="control-label"></label>*@
                <input asp-for="Comment.CreateDateTime" type="hidden" class="form-control" />
                @*<span asp-validation-for="Comment.CreateDateTime" class="text-danger"></span>*@
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
